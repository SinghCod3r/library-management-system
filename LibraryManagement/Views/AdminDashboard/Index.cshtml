@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Books</h5>
                    <h2 class="display-4">@ViewBag.TotalBooks</h2>
                    <p class="card-text">Books in library</p>
                    <a href="/Books" class="btn btn-light">Manage Books</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Available Books</h5>
                    <h2 class="display-4">@ViewBag.AvailableBooks</h2>
                    <p class="card-text">Books available for issue</p>
                    <a href="/Books" class="btn btn-light">View Books</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Members</h5>
                    <h2 class="display-4">@ViewBag.TotalMembers</h2>
                    <p class="card-text">Registered members</p>
                    <a href="/Members" class="btn btn-light">Manage Members</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card bg-secondary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Movies</h5>
                    <h2 class="display-4">@ViewBag.TotalMovies</h2>
                    <p class="card-text">Movies in library</p>
                    <a href="/Movies" class="btn btn-light">Manage Movies</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title">Available Movies</h5>
                    <h2 class="display-4">@ViewBag.AvailableMovies</h2>
                    <p class="card-text">Movies available for issue</p>
                    <a href="/Movies" class="btn btn-light">View Movies</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Active Issues</h5>
                    <h2 class="display-4">@ViewBag.ActiveIssues</h2>
                    <p class="card-text">Books currently issued</p>
                    <a href="/Transactions/ActiveIssues" class="btn btn-dark">View Active Issues</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Overdue Books</h5>
                    <h2 class="display-4">@ViewBag.OverdueBooks</h2>
                    <p class="card-text">Books past due date</p>
                    <a href="/Transactions/OverdueBooks" class="btn btn-light">View Overdue Books</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Recent Transactions</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Member</th>
                                <th>Issue Date</th>
                                <th>Due Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in ViewBag.RecentTransactions)
                            {
                                <tr>
                                    <td>@transaction.Book.Title</td>
                                    <td>@transaction.Member.Name</td>
                                    <td>@transaction.IssueDate.ToString("yyyy-MM-dd")</td>
                                    <td>@transaction.DueDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (transaction.ReturnDate != null)
                                        {
                                            <span class="badge bg-success">Returned</span>
                                        }
                                        else if (transaction.DueDate < DateTime.Today)
                                        {
                                            <span class="badge bg-danger">Overdue</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Active</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Transactions" class="btn btn-primary">View All Transactions</a>
                </div>
            </div>
        </div>
    </div>
</div>
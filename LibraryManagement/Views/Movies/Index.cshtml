@model IEnumerable<LibraryManagement.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by title, director, or category" value="@ViewData["CurrentFilter"]" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-right">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">Add New Movie</a>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Director)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Year)</th>
                <th>@Html.DisplayNameFor(model => model.IsAvailable)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Director</td>
                <td>@item.Category</td>
                <td>@item.Year</td>
                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Checked Out</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-info btn-sm">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.MovieId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.MovieId" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No movies found. Please try a different search term.</div>
}
@model LibraryManagement.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-4">
    <h1>Movie Details</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4>@Model.Title</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Title</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Director</dt>
                        <dd class="col-sm-9">@Model.Director</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Model.Category</dd>

                        <dt class="col-sm-3">Year</dt>
                        <dd class="col-sm-9">@Model.Year</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Checked Out</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.MovieId" class="btn btn-warning">Edit</a>
            }
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
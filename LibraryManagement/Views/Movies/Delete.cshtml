@model LibraryManagement.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete Movie</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this movie?</h3>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Director)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Director)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Category)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Year)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Year)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsAvailable)</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Checked Out</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="MovieId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
@page
@model SimpleLibrary.Pages.Transactions.IssueBookModel

@{
    ViewData["Title"] = "Issue Book";
}

<h1>Issue Book</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Transaction.BookId" class="control-label">Book</label>
                <select asp-for="Transaction.BookId" asp-items="Model.Books" class="form-control">
                    <option value="">-- Select Book --</option>
                </select>
                <span asp-validation-for="Transaction.BookId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Transaction.MemberId" class="control-label">Member</label>
                <select asp-for="Transaction.MemberId" asp-items="Model.Members" class="form-control">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="Transaction.MemberId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Transaction.DueDate" class="control-label">Due Date</label>
                <input asp-for="Transaction.DueDate" type="date" class="form-control" 
                       min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" 
                       max="@DateTime.Today.AddDays(15).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Transaction.DueDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Issue Book" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
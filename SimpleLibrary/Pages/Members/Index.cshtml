@page
@model SimpleLibrary.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Members";
}

<h1>Members</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">Add New Member</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Joined Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Members)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.JoinedOn.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>